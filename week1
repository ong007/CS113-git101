// เรื่อง introduction c program
#include <stdio.h>      //เป็นฟังก์ชั่นในการเรียกใช้จำพวก printf,puts

int main()
{                       //การใช้ฟังก์ชั่นจะมีการใช้ {...}เรียกว่า blockสำหรับเขียนคำสั่งลงไป
    printf("Ong\n");    //เครื่องหมาย"\n"ไว้สำหรับการ print คนละบรรทันใช้ภายใน " "
    printf("com-sci");  //ทุกครั้งที่มีการเขียนคำสั่งต้องจบด้วยเครื่องหมาย ;
    char character[12]; //เป็นการประกาศตัวเเปลของ character ให้เป็นปประเภท chr เวลา print ใช้ "%c"
    int i;              //เป็นการประกาศตัวเเปลของ i ให้เป็นปประเภท int เวลา print ใช้ "%d"
    float f;            //เป็นการประกาศตัวเเปลของ f ให้เป็นปประเภท float เวลา print ใช้ "%f"
}